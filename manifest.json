{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "1.0",
    "description": "An extension with widgets and Pomodoro Timer.",
    "permissions": [
        "storage",
        "activeTab"
    ],
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    },
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon48.png",
            "128": "icon128.png"
        }
    },
    "icons": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
    }
}
